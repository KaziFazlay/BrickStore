@model IEnumerable<Product>

<h1>Index</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary"> Create New Product</a>

        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.price</td>
                        <td>
                            <div class="w-75 btn-group" role="group">

                                <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                                <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-danger mx-2"> <i class="bi bi-trash"></i>Delete</a>


                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No category exists.</p>
    }

</div>